@{
    ViewData["Title"] = "API Servisleri Dashboard";
}

<!-- ViewComponent Navigation -->
@await Component.InvokeAsync("RoleBasedNavigation", new { showLogo = false })

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-plug"></i> API Servisleri Dashboard</h2>
            <p class="text-muted">Sistem yönetimi ve istatistikleri</p>
        </div>
    </div>

    <!-- Durum Kartları -->
    <div class="row mb-4">
        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                                <i class="fas fa-server fs-1 text-warning"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <p class="text-muted mb-1 fw-medium">MAKINE BAĞLANTISI</p>
                                    <h4 class="mb-0 fw-bold" id="connectionStatus">
                                        <span class="text-warning">Bağlantı Yok</span>
                                    </h4>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-warning bg-opacity-10 text-warning" id="connectionBadge">
                                        <i class="fas fa-times"></i> Offline
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 rounded-3 p-3">
                                <i class="fas fa-heartbeat fs-1 text-success"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <p class="text-muted mb-1 fw-medium">API HEALTH</p>
                                    <h4 class="mb-0 fw-bold" id="healthStatus">
                                        <span class="text-muted">Kontrol Edilmedi</span>
                                    </h4>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary" id="healthBadge">
                                        <i class="fas fa-question"></i> Unknown
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 rounded-3 p-3">
                                <i class="fas fa-clock fs-1 text-info"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <p class="text-muted mb-1 fw-medium">SON HEALTH CHECK</p>
                                    <h4 class="mb-0 fw-bold" id="lastCheck">-</h4>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-info bg-opacity-10 text-info" id="timeBadge">
                                        <i class="fas fa-clock"></i> Pending
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                                <i class="fas fa-tachometer-alt fs-1 text-primary"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <p class="text-muted mb-1 fw-medium">YANIT SÜRESİ</p>
                                    <h4 class="mb-0 fw-bold" id="responseTime">-</h4>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-primary bg-opacity-10 text-primary" id="speedBadge">
                                        <i class="fas fa-tachometer-alt"></i> Fast
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white">
                    <h6 class="m-0 font-weight-semibold"><i class="fas fa-rocket"></i> Hızlı Erişim</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <button onclick="showMachineModal()" class="btn btn-outline-primary btn-block">
                                <i class="fas fa-plus"></i> Makine Seç
                            </button>
                        </div>
                        <div class="col-md-3 mb-2">
                            <button onclick="checkHealth()" class="btn btn-outline-success btn-block" id="healthCheckBtn" disabled>
                                <i class="fas fa-heartbeat"></i> Health Check
                            </button>
                        </div>
                        <div class="col-md-3 mb-2">
                            <button onclick="startApiOperations()" class="btn btn-outline-info btn-block" id="apiOpsBtn" disabled>
                                <i class="fas fa-tools"></i> API İşlemleri
                            </button>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-controller="Password" asp-action="PasswordChange" class="btn btn-outline-warning btn-block">
                                <i class="fas fa-user-cog"></i> Profil Ayarları
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ana İçerik -->
    <div class="row">
        <!-- Makine Bağlantısı -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow">
                <div class="card-header bg-info text-white">
                    <h6 class="m-0 font-weight-semibold"><i class="fas fa-server"></i> Makine Bağlantısı</h6>
                </div>
                <div class="card-body">
                    <!-- Makine seçilmemiş durumu -->
                    <div id="noMachineSelected" class="text-center py-4">
                        <div class="mb-4">
                            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                <i class="fas fa-server fa-2x text-muted"></i>
                            </div>
                        </div>
                        <h5 class="text-muted mb-3">Makine Seçimi Gerekli</h5>
                        <p class="text-muted mb-4">
                            API işlemlerine başlamak için öncelikle bir makine seçmeniz gerekiyor.
                            <br>Lütfen aşağıdaki butona tıklayarak bir makine seçin.
                        </p>
                        <button onclick="showMachineModal()" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Makine Seç
                        </button>
                    </div>

                    <!-- Makine seçilmiş durumu -->
                    <div id="machineSelected" style="display: none;">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                                    <i class="fas fa-server text-success"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1" id="selectedMachineName">-</h6>
                                    <small class="text-muted" id="selectedMachineInfo">-</small>
                                </div>
                            </div>
                            <span class="badge bg-success" id="machineStatus">Bağlı</span>
                        </div>
                        
                        <div class="row text-center mt-4">
                            <div class="col-4">
                                <button onclick="checkHealth()" class="btn btn-outline-success btn-sm w-100">
                                    <i class="fas fa-heartbeat d-block mb-1"></i>
                                    <small>Health Check</small>
                                </button>
                            </div>
                            <div class="col-4">
                                <button onclick="startApiOperations()" class="btn btn-outline-info btn-sm w-100">
                                    <i class="fas fa-tools d-block mb-1"></i>
                                    <small>API İşlemleri</small>
                                </button>
                            </div>
                            <div class="col-4">
                                <button onclick="changeMachine()" class="btn btn-outline-warning btn-sm w-100">
                                    <i class="fas fa-sync-alt d-block mb-1"></i>
                                    <small>Değiştir</small>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- API İşlemleri -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow">
                <div class="card-header bg-success text-white">
                    <h6 class="m-0 font-weight-semibold"><i class="fas fa-tools"></i> API İşlemleri</h6>
                </div>
                <div class="card-body">
                    <div id="apiOperationsContent">
                        <div class="text-center py-4">
                            <div class="mb-4">
                                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                    <i class="fas fa-plug fa-2x text-muted"></i>
                                </div>
                            </div>
                            <h6 class="text-muted mb-3">API Servisleri</h6>
                            <p class="text-muted small mb-0">
                                Makine seçtikten sonra API işlemlerine erişebilirsiniz.
                            </p>
                        </div>
                    </div>
                    
                    <!-- API endpoint'leri - makine seçildikten sonra gösterilecek -->
                    <div id="apiEndpoints" style="display: none;">
                        <div class="list-group list-group-flush">
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded p-2 me-3">
                                        <i class="fas fa-users text-primary"></i>
                                    </div>
                                    <div>
                                        <strong>Kullanıcılar</strong>
                                        <br><small class="text-muted">GET /api/v1/users</small>
                                    </div>
                                </div>
                                <button class="btn btn-sm btn-outline-primary">Test Et</button>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <div class="d-flex align-items-center">
                                    <div class="bg-info bg-opacity-10 rounded p-2 me-3">
                                        <i class="fas fa-info-circle text-info"></i>
                                    </div>
                                    <div>
                                        <strong>Sistem Bilgisi</strong>
                                        <br><small class="text-muted">GET /api/v1/system/info</small>
                                    </div>
                                </div>
                                <button class="btn btn-sm btn-outline-info">Test Et</button>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0 border-0">
                                <div class="d-flex align-items-center">
                                    <div class="bg-success bg-opacity-10 rounded p-2 me-3">
                                        <i class="fas fa-heartbeat text-success"></i>
                                    </div>
                                    <div>
                                        <strong>Health Check</strong>
                                        <br><small class="text-muted">GET /health</small>
                                    </div>
                                </div>
                                <button class="btn btn-sm btn-outline-success">Test Et</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Son Aktiviteler -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow">
                <div class="card-header bg-light">
                    <h6 class="m-0 font-weight-semibold">
                        <i class="fas fa-history"></i> Son Aktiviteler
                    </h6>
                </div>
                <div class="card-body">
                    <div id="activityLog">
                        <div class="text-center text-muted py-3">
                            <i class="fas fa-clock fa-2x mb-2"></i>
                            <p class="mb-0">Henüz aktivite bulunmuyor.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Makine Seçim Modal -->
<div class="modal fade" id="machineSelectionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-server"></i> Makine Seçimi</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="machineListContent">
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Yükleniyor...</span>
                        </div>
                        <p class="mt-2">Makineler yükleniyor...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Global JavaScript functions
    window.showMachineModal = showMachineModal;
    window.checkSelectedMachineHealth = checkHealth;

    // Sayfa yüklendiğinde
    $(document).ready(function() {
        checkSelectedMachine();
        addActivityLog('Dashboard yüklendi');
    });

    function checkSelectedMachine() {
        $.get('/Home/GetSelectedMachine', function(response) {
            if (response.success) {
                showMachineSelected(response.data);
                updateConnectionCards(response.data);
            } else {
                showNoMachineSelected();
            }
        });
    }

    function showMachineSelected(machine) {
        $('#noMachineSelected').hide();
        $('#machineSelected').show();
        $('#selectedMachineName').text(machine.branchName);
        $('#selectedMachineInfo').text(`Kod: ${machine.branchId} | ${machine.apiAddress}`);
        
        // Kartları güncelle
        $('#connectionStatus').html('<span class="text-success">Bağlı</span>');
        $('#connectionBadge').removeClass('bg-warning bg-opacity-10 text-warning')
                            .addClass('bg-success bg-opacity-10 text-success')
                            .html('<i class="fas fa-check"></i> Online');
        
        // Butonları aktif et
        $('#healthCheckBtn, #apiOpsBtn').prop('disabled', false);
        $('#apiEndpoints').show();
        $('#apiOperationsContent').hide();

        addActivityLog(`Makine bağlantısı aktif: ${machine.branchName}`);
    }

    function showNoMachineSelected() {
        $('#noMachineSelected').show();
        $('#machineSelected').hide();
        
        // Kartları sıfırla
        $('#connectionStatus').html('<span class="text-warning">Bağlantı Yok</span>');
        $('#connectionBadge').removeClass('bg-success bg-opacity-10 text-success')
                            .addClass('bg-warning bg-opacity-10 text-warning')
                            .html('<i class="fas fa-times"></i> Offline');
        
        // Butonları pasif et
        $('#healthCheckBtn, #apiOpsBtn').prop('disabled', true);
        $('#apiEndpoints').hide();
        $('#apiOperationsContent').show();
    }

    function updateConnectionCards(machine) {
        // Connection kartını güncelle
        $('#connectionStatus').html('<span class="text-success">Bağlı</span>');
        $('#healthStatus').html('<span class="text-warning">Test Edilmedi</span>');
    }

    function showMachineModal() {
        $('#machineSelectionModal').modal('show');
        loadMachines();
    }

    function loadMachines() {
        $.get('/Home/GetMachines', function(response) {
            if (response.success && response.data) {
                var html = '<div class="row">';
                response.data.forEach(function(machine) {
                    var statusBadge = machine.isActive 
                        ? '<span class="badge bg-success">Aktif</span>' 
                        : '<span class="badge bg-warning">Pasif</span>';
                    
                    html += `
                        <div class="col-md-6 mb-3">
                            <div class="card machine-card h-100" onclick="selectMachine('${machine.id}')">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary bg-opacity-10 rounded p-2 me-3">
                                                <i class="fas fa-server text-primary"></i>
                                            </div>
                                            <div>
                                                <h6 class="card-title mb-1">${machine.branchName}</h6>
                                                <small class="text-muted">Kod: ${machine.code}</small><br>
                                                <small class="text-muted">ID: ${machine.branchId}</small>
                                            </div>
                                        </div>
                                        <div>${statusBadge}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                });
                html += '</div>';
                $('#machineListContent').html(html);
            } else {
                $('#machineListContent').html('<div class="alert alert-warning">Aktif makine bulunamadı.</div>');
            }
        }).fail(function() {
            $('#machineListContent').html('<div class="alert alert-danger">Makineler yüklenirken hata oluştu.</div>');
        });
    }

    function selectMachine(machineId) {
        addActivityLog('Makine bağlantısı kuruluyor...');
        
        $.ajax({
            url: '/Home/SelectMachine',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ machineId: machineId }),
            success: function(response) {
                if (response.success) {
                    $('#machineSelectionModal').modal('hide');
                    if (typeof toastr !== 'undefined') {
                        toastr.success(response.message);
                    }
                    showMachineSelected(response.machine);
                    updateConnectionCards(response.machine);
                    addActivityLog(`Makine bağlantısı başarılı: ${response.machine.branchName}`);
                } else {
                    if (typeof toastr !== 'undefined') {
                        toastr.error(response.message);
                    }
                    addActivityLog(`Bağlantı hatası: ${response.message}`);
                }
            },
            error: function() {
                if (typeof toastr !== 'undefined') {
                    toastr.error('Makine bağlantısı kurulurken hata oluştu');
                }
                addActivityLog('Bağlantı kurulurken beklenmeyen hata oluştu');
            }
        });
    }

    function checkHealth() {
        addActivityLog('Health check yapılıyor...');
        $('#healthStatus').html('<span class="text-info">Kontrol Ediliyor...</span>');
        $('#healthBadge').removeClass().addClass('badge bg-info bg-opacity-10 text-info').html('<i class="fas fa-spinner fa-spin"></i> Checking');
        
        // Simulated health check
        setTimeout(function() {
            var isHealthy = Math.random() > 0.3;
            var responseTime = Math.floor(Math.random() * 200) + 50;
            
            if (isHealthy) {
                $('#healthStatus').html('<span class="text-success">Sağlıklı</span>');
                $('#healthBadge').removeClass().addClass('badge bg-success bg-opacity-10 text-success').html('<i class="fas fa-check"></i> Healthy');
                $('#responseTime').text(`${responseTime}ms`);
                $('#speedBadge').removeClass().addClass('badge bg-success bg-opacity-10 text-success').html('<i class="fas fa-check"></i> Fast');
                $('#lastCheck').text(new Date().toLocaleTimeString('tr-TR'));
                $('#timeBadge').removeClass().addClass('badge bg-success bg-opacity-10 text-success').html('<i class="fas fa-check"></i> Recent');
                
                if (typeof toastr !== 'undefined') {
                    toastr.success(`API sağlıklı - Yanıt süresi: ${responseTime}ms`);
                }
                addActivityLog(`Health check başarılı - Yanıt süresi: ${responseTime}ms`);
            } else {
                $('#healthStatus').html('<span class="text-danger">Sağlıksız</span>');
                $('#healthBadge').removeClass().addClass('badge bg-danger bg-opacity-10 text-danger').html('<i class="fas fa-times"></i> Unhealthy');
                $('#responseTime').text('-');
                $('#speedBadge').removeClass().addClass('badge bg-danger bg-opacity-10 text-danger').html('<i class="fas fa-times"></i> Error');
                
                if (typeof toastr !== 'undefined') {
                    toastr.error('API sağlık kontrolü başarısız');
                }
                addActivityLog('Health check başarısız - API yanıt vermiyor');
            }
        }, 1500);
    }

    function startApiOperations() {
        addActivityLog('API işlemleri sayfasına yönlendiriliyor...');
        window.location.href = '/Home/ApiOperations';
    }

    function changeMachine() {
        showMachineModal();
    }

    function addActivityLog(message) {
        var timestamp = new Date().toLocaleTimeString('tr-TR');
        var logEntry = `
            <div class="d-flex justify-content-between border-bottom py-2">
                <span>${message}</span>
                <small class="text-muted">${timestamp}</small>
            </div>
        `;
        
        var activityLog = $('#activityLog');
        if (activityLog.find('.text-center').length > 0) {
            activityLog.empty();
        }
        activityLog.prepend(logEntry);
        
        // Son 5 aktiviteyi tut
        var entries = activityLog.children();
        if (entries.length > 5) {
            entries.slice(5).remove();
        }
    }

    // CSS for machine cards
    $('<style>').text(`
        .machine-card {
            cursor: pointer;
            transition: all 0.3s ease;
            border: 1px solid rgba(0,0,0,0.125);
        }
        .machine-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            border-color: #007bff;
        }
        .fs-1 {
            font-size: 2rem;
        }
        .btn-block {
            width: 100%;
        }
    `).appendTo('head');
</script>