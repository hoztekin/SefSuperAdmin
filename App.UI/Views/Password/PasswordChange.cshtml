@model PasswordChangeViewModel


<div class="container">
	<div class="row">
		
		<div class="col-md-9 order-1 order-lg-2 mx-auto">
			<div class="featured-box featured-box-primary text-start mt-0">
				<div class="box-content">
					<h4 class="color-primary font-weight-semibold text-4  mb-3">Parolanızı değiştirmek için aşağıdaki formu doldurun.</h4>
					<form asp-action="PasswordChange" asp-controller="Password" method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger small"></div>
						<div class="row">
							<div class="form-group col-12">
								<label asp-for="OldPassword" class="control-label"><b>Eski Parolanız *</b></label>
								<input asp-for="OldPassword" class="form-control form-control-lg" required>
								<span asp-validation-for="OldPassword" class="text-danger"></span>
							</div>
							<div class="form-group col-12">
								<label asp-for="NewPassword" class="control-label"><b>Yeni Parolanız *</b></label>
								<input asp-for="NewPassword" class="form-control form-control-lg" required>
								<span asp-validation-for="NewPassword" class="text-danger"></span>
							</div>
							<div class="form-group col-12">
								<label asp-for="ConfirmNewPassword " class="control-label"><b>Parola Tekrarı *</b></label>
								<input asp-for="ConfirmNewPassword " class="form-control form-control-lg" required>
								<span asp-validation-for="ConfirmNewPassword " class="text-danger"></span>
							</div>
						</div>
						<div class="row">
							<div class="form-group col-lg-2 mx-auto mt-4">
								<button type="submit" class="btn btn-modern btn-primary d-block" style="font-size:1em; width:150px;"><i class="fa-solid fa-key"></i> Güncelle</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
