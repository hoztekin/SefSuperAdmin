@model List<UserAppDtoUI>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="fas fa-users"></i> Kullanıcı Yönetimi</h2>
                    <p class="text-muted">Sistemdeki tüm kullanıcıları yönetin ve rol atayın</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Dashboard'a Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-list"></i> Kullanıcı Listesi (@Model.Count kullanıcı)
                        </h6>
                        <button onclick="refreshUserList()" class="btn btn-sm btn-light">
                            <i class="fas fa-sync-alt"></i> Yenile
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="usersTable">
                                <thead class="thead-dark">
                                    <tr>
                                        <th><i class="fas fa-user"></i> Kullanıcı Adı</th>
                                        <th><i class="fas fa-envelope"></i> Email</th>
                                        <th><i class="fas fa-user-tag"></i> Roller</th>
                                        <th><i class="fas fa-calendar"></i> Kayıt Tarihi</th>
                                        <th><i class="fas fa-check-circle"></i> Email Onayı</th>
                                        <th style="width: 200px;"><i class="fas fa-cogs"></i> İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@user.UserName</strong>
                                                <br>
                                                <small class="text-muted">ID: @user.Id</small>
                                            </td>
                                            <td>@user.EMail</td>
                                            <td>
                                                @if (user.Roles?.Any() == true)
                                                {
                                                    @foreach (var role in user.Roles)
                                                    {
                                                        <span class="badge badge-pill badge-primary mr-1">@role</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted"><em>Rol atanmamış</em></span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.CreatedDate.HasValue)
                                                {
                                                    @user.CreatedDate.Value.ToString("dd.MM.yyyy HH:mm")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.EmailConfirmed)
                                                {
                                                    <span class="badge badge-success"><i class="fas fa-check"></i> Onaylı</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning"><i class="fas fa-clock"></i> Bekliyor</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="AssignRoles" asp-route-userId="@user.Id"
                                                       class="btn btn-sm btn-primary" title="Rol Ata">
                                                        <i class="fas fa-user-tag"></i> Roller
                                                    </a>
                                                    <button onclick="viewUserDetails('@user.Id')"
                                                            class="btn btn-sm btn-info" title="Detayları Görüntüle">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button onclick="getUserRoles('@user.Id')"
                                                            class="btn btn-sm btn-success" title="Rollerini Görüntüle">
                                                        <i class="fas fa-list"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz kullanıcı bulunmuyor</h5>
                            <p class="text-muted">Sistem henüz hiç kullanıcı kaydı içermiyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Kullanıcı Detay Modal -->
<div class="modal fade" id="userDetailModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title"><i class="fas fa-user"></i> Kullanıcı Detayları</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="userDetailContent">
                    <div class="text-center">
                        <i class="fas fa-spinner fa-spin fa-2x"></i>
                        <p>Yükleniyor...</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<!-- Kullanıcı Rolleri Modal -->
<div class="modal fade" id="userRolesModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="fas fa-user-tag"></i> Kullanıcı Rolleri</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="userRolesContent">
                    <div class="text-center">
                        <i class="fas fa-spinner fa-spin fa-2x"></i>
                        <p>Yükleniyor...</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable kullanarak tablo fonksiyonalitesi
            $('#usersTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                },
                "pageLength": 25,
                "order": [[ 3, "desc" ]], // Kayıt tarihine göre sırala
                "columnDefs": [
                    { "orderable": false, "targets": 5 } // İşlemler kolonunu sıralama dışı bırak
                ]
            });
        });

        function refreshUserList() {
            location.reload();
        }

        function viewUserDetails(userId) {
            $('#userDetailModal').modal('show');

            // Kullanıcı detaylarını AJAX ile getir (bu endpoint'i API'de oluşturmanız gerekebilir)
            $.get('@Url.Action("GetUserDetails", "SistemAdmin")?userId=' + userId, function(response) {
                if (response.success) {
                    var user = response.data;
                    var html = `
    <div class="row">
        <div class="col-md-6">
            <strong>Kullanıcı Adı:</strong><br>
            ${user.userName}<br><br>
            <strong>Email:</strong><br>
            ${user.email}<br><br>
            <strong>Email Onayı:</strong><br>
            ${user.emailConfirmed ? '<span class="badge badge-success">Onaylı</span>' : '<span class="badge badge-warning">Bekliyor</span>'}
        </div>
        <div class="col-md-6">
            <strong>Kayıt Tarihi:</strong><br>
            ${user.createdDate ? new Date(user.createdDate).toLocaleString('tr-TR') : '-'}<br><br>
            <strong>Son Güncelleme:</strong><br>
            ${user.updatedDate ? new Date(user.updatedDate).toLocaleString('tr-TR') : '-'}
        </div>
    </div>
                    `;
                    $('#userDetailContent').html(html);
                } else {
                    $('#userDetailContent').html('<div class="alert alert-danger">Kullanıcı detayları yüklenemedi.</div>');
                }
            }).fail(function() {
                $('#userDetailContent').html('<div class="alert alert-danger">Bir hata oluştu.</div>');
            });
        }

        function getUserRoles(userId) {
            $('#userRolesModal').modal('show');

            $.get('@Url.Action("GetUserRoles", "SistemAdmin")?userId=' + userId, function(response) {
                if (response.success && response.data) {
                    var html = '<div class="list-group">
        ';
        if (response.data.length > 0) {
        response.data.forEach(function(role) {
        var badgeClass = role.exist ? 'badge-success' : 'badge-secondary';
        var icon = role.exist ? 'fa-check' : 'fa-times';
        html += `
        <div class="list-group-item d-flex justify-content-between align-items-center">
            ${role.roleName}
            <span class="badge ${badgeClass}">
                <i class="fas ${icon}"></i> ${role.exist ? 'Atanmış' : 'Atanmamış'}
            </span>
        </div>
        `;
        });
        } else {
        html += '<div class="list-group-item">Henüz rol atanmamış</div>';
        }
        html += '
    </div>';
                    $('#userRolesContent').html(html);
                } else {
                    $('#userRolesContent').html('<div class="alert alert-warning">Kullanıcı rolleri yüklenemedi.</div>');
                }
            }).fail(function() {
                $('#userRolesContent').html('<div class="alert alert-danger">Bir hata oluştu.</div>');
            });
        }
    </script>
}
