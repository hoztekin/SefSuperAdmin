@model List<UserAppDtoUI>

@{
    ViewData["Title"] = "Üye Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-4 offset-4 mt-5">
	<h1 class="display-6 border-bottom text-center pb-2">@ViewData["Title"]</h1>
</div>

<div class="container">
	<div class="row">
		<table class="table table-bordered table-striped">


			<tr>
				<th>Kullanıcı Adı</th>
				<th>Mail Adresi</th>
				<th>Mevcut Rolleri</th>
				<th>Rol Ata</th>
			</tr>
			@if (Model.Count() == 0)
			{
				<tr>
					<td colspan="3">Üye Kaydı Bulunamamıştır.</td>

				</tr>
			}

			else
			{
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.UserName</td>
						<td>@item.EMail</td>
						<td><user-role-name user-role="@item.Id"></user-role-name></td>
						<td><a class="btn btn-success" asp-controller="Role" asp-action="RoleAssign" asp-route-userId="@item.Id">Rol Ata</a></td>
					</tr>
				}
			}

		</table>
	</div>
</div>


