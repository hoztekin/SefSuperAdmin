@model CreateUserDto

@{
	ViewData["Title"] = "Üye ol";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-sm-4 mx-auto mt-4">
		<h1 class="display-5 border-bottom text-center pb-2">@ViewData["Title"]</h1>
	</div>
</div>


<div class="container">
	<div class="row">
		<div class="col-sm-4 mx-auto my-4">
			<div asp-validation-summary="ModelOnly" class="text-danger small"></div>
			<form asp-action="Register" method="post">
				<div class="form-group mb-3 mt-2">
					<label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
					<input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" />
					<span asp-validation-for="UserName" class="text-danger small"></span>
				</div>
				<div class="form-group mb-3 mt-2">
					<label asp-for="EMail" class="form-label">Mail Adresi</label>
					<input asp-for="EMail" class="form-control" placeholder="Mail Adresi" />
					<span asp-validation-for="EMail" class="text-danger small"></span>
				</div>

				<div class="form-group mb-3 mt-2">
					<label asp-for="Password" class="form-label">Şifre</label>
					<input asp-for="Password" class="form-control" placeholder="Şifre" />
					<span asp-validation-for="Password" class="text-danger small"></span>
				</div>
				<div class="form-group mb-3 mt-2">
					<label asp-for="ConfirmPassword" class="form-label">Şifre Tekrarı</label>
					<input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" />
					<span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
				</div>
				<div class="form-group d-grid gap-2 col-6 mx-auto mt-4">
					<button type="submit" class="btn btn-primary btn-lg">Gönder</button>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {

	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

