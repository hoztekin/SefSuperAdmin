@model List<RoleAssignDtoUI>



@{
    ViewData["Title"] = "Rol Atama";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@ViewBag.Username - Kullanıcısına Rol Atama </h4>
        </div>
        <div class="card-body">
            <form asp-action="RoleAssign" method="post">
                <input type="hidden" name="userId" value="@(ViewBag.UserId ?? TempData["userId"])" />

                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Rol Adı</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input type="hidden" asp-for="@Model[i].RoleId" />
                                        <input type="hidden" asp-for="@Model[i].RoleName" />
                                        <input type="hidden" asp-for="@Model[i].UserId" />
                                        @Model[i].RoleName
                                    </td>
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" asp-for="@Model[i].Exist" />
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Rolleri Kaydet
                    </button>
                    <a asp-action="UserRoles" asp-route-userId="@TempData["userId"]" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

