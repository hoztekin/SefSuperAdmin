@section Scripts {
    <script>
        let selectedMachineId = null;
        let isSelecting = false;

        function showSuccess(message) {
            Swal.fire({
                title: 'Başarılı!',
                html: message, // html kullanarak <br> taglerini destekleyelim
                icon: 'success',
                position: 'top-end',
                showConfirmButton: false,
                timer: 6000,
                timerProgressBar: true,
                toast: true,
                background: '#d4edda',
                iconColor: '#28a745',
                customClass: {
                    popup: 'colored-toast'
                },
                showClass: {
                    popup: 'animate__animated animate__fadeInRight animate__faster'
                },
                hideClass: {
                    popup: 'animate__animated animate__fadeOutRight animate__faster'
                }
            });
        }

        function showError(message) {
            Swal.fire({
                title: 'Hata!',
                html: message,
                icon: 'error',
                position: 'top-end',
                showConfirmButton: true,
                timer: 8000, // Hata mesajları biraz daha uzun dursun
                timerProgressBar: true,
                toast: true,
                background: '#f8d7da',
                iconColor: '#dc3545',
                customClass: {
                    popup: 'colored-toast'
                },
                showClass: {
                    popup: 'animate__animated animate__fadeInRight animate__faster'
                },
                hideClass: {
                    popup: 'animate__animated animate__fadeOutRight animate__faster'
                }
            });
        }

        function showWarning(message) {
            Swal.fire({
                title: 'Uyarı!',
                html: message,
                icon: 'warning',
                position: 'top-end',
                showConfirmButton: true,
                timer: 7000,
                timerProgressBar: true,
                toast: true,
                background: '#fff3cd',
                iconColor: '#ffc107',
                customClass: {
                    popup: 'colored-toast'
                }
            });
        }

        function showInfo(message) {
            Swal.fire({
                title: 'Bilgi',
                html: message,
                icon: 'info',
                position: 'top-end',
                showConfirmButton: false,
                timer: 5000,
                timerProgressBar: true,
                toast: true,
                background: '#d1ecf1',
                iconColor: '#17a2b8',
                customClass: {
                    popup: 'colored-toast'
                }
            });
        }

        // Confirmation dialog için
        function showConfirm(title, message, callback, cancelCallback = null) {
            Swal.fire({
                title: title,
                html: message,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Evet',
                cancelButtonText: 'Hayır',
                confirmButtonColor: '#007bff',
                cancelButtonColor: '#6c757d',
                focusConfirm: false,
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    if (callback) callback();
                } else if (result.isDismissed && cancelCallback) {
                    cancelCallback();
                }
            });
        }

        // Page load - check selected machine
        $(document).ready(function() {
            checkSelectedMachine();
        });

        function checkSelectedMachine() {
            $.get('@Url.Action("GetSelectedMachine", "Home")')
                .done(function(response) {
                    if (response.success && response.data) {
                        showSelectedMachineInfo(response.data);
                    } else {
                        $('#machineSelectionModal').modal('show');
                        loadMachines();
                    }
                })
                .fail(function(xhr, status, error) {
                    console.error('Selected machine check failed:', error);
                    $('#machineSelectionModal').modal('show');
                    loadMachines();
                });
        }

        function loadMachines() {
            showLoadingState();

            $.get('@Url.Action("GetMachines", "Home")')
                .done(function(response) {
                    if (response.success && response.data && response.data.length > 0) {
                        displayMachines(response.data);
                    } else {
                        showErrorState(response.message || 'Hiç aktif makine bulunamadı');
                    }
                })
                .fail(function(xhr, status, error) {
                    console.error('Failed to load machines:', error);
                    showErrorState('Makineler yüklenirken bir hata oluştu. Lütfen tekrar deneyiniz.');
                });
        }

        function displayMachines(machines) {
            hideAllStates();

            const $container = $('#machineSelectionCards');
            $container.empty();

            machines.forEach(function(machine) {
                const card = createMachineCard(machine);
                $container.append(card);
            });

            $container.show();
        }

        function createMachineCard(machine) {
            const statusBadge = machine.isActive
                ? '<span class="badge bg-success">Aktif</span>'
                : '<span class="badge bg-secondary">Pasif</span>';

            const isDisabled = !machine.isActive ? 'disabled' : '';
            const cardClass = machine.isActive
                ? 'border-primary machine-card'
                : 'border-secondary machine-card opacity-75';

            return `
                <div class="col-md-6 col-lg-4">
                    <div class="card ${cardClass}" data-machine-id="${machine.id}">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="card-title mb-0">
                                    <i class="bx bx-server text-primary"></i>
                                    ${machine.branchName}
                                </h6>
                                ${statusBadge}
                            </div>
                            <div class="mb-2">
                                <small class="text-muted">Şube ID:</small>
                                <code class="small">${machine.branchId}</code>
                            </div>
                            <div class="mb-2">
                                <small class="text-muted">Makine Kodu:</small>
                                <span class="badge bg-info small">${machine.code}</span>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">API:</small>
                                <div class="text-truncate small" title="${machine.apiAddress}">
                                    ${machine.apiAddress}
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    ${formatDate(machine.createdDate)}
                                </small>
                                <button class="btn btn-primary btn-sm select-machine-btn"
                                        data-machine-id="${machine.id}"
                                        data-machine-name="${machine.branchName}"
                                        ${isDisabled}>
                                    <i class="bx bx-check"></i> Seç
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        // Machine card click events
        $(document).on('click', '.machine-card', function() {
            if (!$(this).hasClass('opacity-75')) {
                $('.machine-card').removeClass('selected');
                $(this).addClass('selected');
                selectedMachineId = $(this).data('machine-id');
            }
        });

        // Select machine button click
        $(document).on('click', '.select-machine-btn', function(e) {
            e.stopPropagation();

            if (isSelecting) return;

            const machineId = $(this).data('machine-id');
            const machineName = $(this).data('machine-name');

            selectMachine(machineId, machineName, $(this));
        });

        function selectMachine(machineId, machineName, $btn) {
            if (isSelecting) return;

            isSelecting = true;
            const originalText = $btn.html();

            // Button state'i güncelle
            $btn.prop('disabled', true)
                .html('<i class="spinner-border spinner-border-sm me-1"></i> Bağlanıyor...');

            // Diğer butonları da disable et
            $('.select-machine-btn').prop('disabled', true);

            $.ajax({
                url: '@Url.Action("SelectMachine", "Home")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ machineId: machineId.toString() }),
                success: function(response) {
                    if (response.success) {
                        // Detaylı başarı mesajı - health check + login bilgileri ile
                        let successMessage = `${machineName} başarıyla seçildi!`;

                        if (response.healthCheck && response.login) {
                            const healthTime = response.healthCheck.responseTime || '?';
                            const loginStatus = response.login.success ? '✅' : '❌';

                            successMessage += `<br><small class="d-block mt-1">`;
                            successMessage += `🔍 Sağlık: ✅ ${healthTime}ms | `;
                            successMessage += `🔐 Giriş: ${loginStatus} | `;
                            successMessage += `🔑 Token: ✅ Alındı`;
                            successMessage += `</small>`;
                        }

                        showSuccess(successMessage);
                        $('#machineSelectionModal').modal('hide');
                        showSelectedMachineInfo(response.machine);

                        // Sayfa yenilemeden önce kısa bekleme
                        setTimeout(function() {
                            location.reload();
                        }, 2000);
                    } else {
                        // Detaylı hata mesajı
                        let errorMessage = response.message || 'Makine seçimi başarısız';

                        // Health check hatası varsa
                        if (response.healthCheck && !response.healthCheck.healthy) {
                            errorMessage += `<br><small class="text-muted">`;
                            errorMessage += `🔍 Sağlık: ❌ ${response.healthCheck.message}`;
                            if (response.healthCheck.responseTime) {
                                errorMessage += ` (${response.healthCheck.responseTime}ms)`;
                            }
                            errorMessage += `</small>`;
                        }

                        // Login hatası varsa
                        if (response.login && !response.login.success) {
                            errorMessage += `<br><small class="text-muted">`;
                            errorMessage += `🔐 Giriş: ❌ ${response.login.message}`;
                            errorMessage += `</small>`;
                        }

                        showError(errorMessage);
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Machine selection failed:', error);
                    showError('Makine seçimi sırasında beklenmeyen hata oluştu');
                },
                complete: function() {
                    // Button state'leri eski haline getir
                    $btn.prop('disabled', false).html(originalText);
                    $('.select-machine-btn').prop('disabled', false);
                    isSelecting = false;
                }
            });
        }


        function showSelectedMachineInfo(machine) {
            const machineInfo = `
                <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <strong><i class="bx bx-server"></i> Seçili Makine:</strong>
                            ${machine.branchName} (${machine.branchId})
                            <br>
                            <small class="text-muted">
                                <i class="bx bx-link-external"></i> ${machine.apiAddress}
                                <span id="connectionStatus" class="badge bg-success ms-2">
                                    <i class="bx bx-check-circle"></i> Bağlı
                                </span>
                            </small>
                        </div>
                        <div>
                            <button type="button" class="btn btn-sm btn-outline-success me-2" onclick="checkTokenStatus()">
                                <i class="bx bx-shield-check"></i> Durum
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="changeMachine()">
                                <i class="bx bx-refresh"></i> Değiştir
                            </button>
                        </div>
                    </div>
                </div>
            `;

            $('.selected-machine-info').remove();
            $('.content-body').prepend(`<div class="selected-machine-info">${machineInfo}</div>`);
        }

        function checkTokenStatus() {
            const $btn = $(event.target);
            const originalText = $btn.html();

            $btn.prop('disabled', true)
                .html('<i class="spinner-border spinner-border-sm"></i>');

            $.get('@Url.Action("CheckSelectedMachineStatus", "Home")')
                .done(function(response) {
                    if (response.success && response.data) {
                        const tokenInfo = response.data.token;
                        const machineInfo = response.data.machine;

                        let statusMessage = `${machineInfo.branchName} Bağlantı Durumu:<br>`;

                        if (tokenInfo.hasValidToken) {
                            const expiresAt = new Date(tokenInfo.expiresAt).toLocaleString('tr-TR');
                            statusMessage += `<small class="text-success">✅ Token Geçerli - Süre: ${expiresAt}</small>`;

                            // Connection status badge'i güncelle
                            $('#connectionStatus')
                                .removeClass('bg-warning bg-danger')
                                .addClass('bg-success')
                                .html('<i class="bx bx-check-circle"></i> Bağlı');
                        } else {
                            statusMessage += `<small class="text-warning">⚠️ Token Geçersiz - Yenileme Gerekli</small>`;
                            statusMessage += `<br><button class="btn btn-sm btn-warning mt-1" onclick="refreshToken()">`;
                            statusMessage += `<i class="bx bx-refresh"></i> Token Yenile</button>`;

                            // Connection status badge'i güncelle
                            $('#connectionStatus')
                                .removeClass('bg-success bg-danger')
                                .addClass('bg-warning')
                                .html('<i class="bx bx-time"></i> Token Gerekli');
                        }

                        showSuccess(statusMessage);
                    } else {
                        showError(response.message || 'Durum kontrol edilemedi');
                    }
                })
                .fail(function() {
                    showError('Bağlantı durumu kontrol edilemedi');
                })
                .always(function() {
                    $btn.prop('disabled', false).html(originalText);
                });
        }

        // Token yenileme fonksiyonu - yeni
        function refreshToken() {
            const $btn = $(event.target);
            const originalText = $btn.html();

            $btn.prop('disabled', true)
                .html('<i class="spinner-border spinner-border-sm"></i> Yenileniyor...');

            $.post('@Url.Action("RefreshExternalApiToken", "Home")')
                .done(function(response) {
                    if (response.success) {
                        showSuccess('Token başarıyla yenilendi!');

                        // Connection status badge'i güncelle
                        $('#connectionStatus')
                            .removeClass('bg-warning bg-danger')
                            .addClass('bg-success')
                            .html('<i class="bx bx-check-circle"></i> Bağlı');

                        // Success mesajını kapat
                        setTimeout(function() {
                            $('.alert-success').not('.selected-machine-info .alert').alert('close');
                        }, 3000);
                    } else {
                        showError(response.message || 'Token yenilenemedi');
                    }
                })
                .fail(function() {
                    showError('Token yenileme sırasında hata oluştu');
                })
                .always(function() {
                    $btn.prop('disabled', false).html(originalText);
                });
        }

        function changeMachine() {
            showConfirm(
                'Makine Değiştir',
                'Başka bir makineyi seçmek istediğinizden emin misiniz?',
                function() {
                    $('.selected-machine-info').remove();
                    $('#machineSelectionModal').modal('show');
                    loadMachines();
                }
            );
        }

        function refreshMachines() {
            loadMachines();
        }

        function showLoadingState() {
            hideAllStates();
            $('#machineLoadingState').show();
        }

        function showErrorState(message) {
            hideAllStates();
            $('#machineErrorMessage').text(message);
            $('#machineErrorState').show();
        }

        function hideAllStates() {
            $('#machineLoadingState, #machineSelectionCards, #machineErrorState').hide();
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diffTime = Math.abs(now - date);
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

            if (diffDays === 1) {
                return 'Bugün';
            } else if (diffDays === 2) {
                return 'Dün';
            } else if (diffDays <= 7) {
                return `${diffDays} gün önce`;
            } else {
                return date.toLocaleDateString('tr-TR');
            }
        }

        // System status refresh
        function refreshSystemStatus() {
            const button = event.target;
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="bx bx-loader-alt bx-spin"></i> Yenileniyor...';
            button.disabled = true;

            setTimeout(function() {
                button.innerHTML = originalText;
                button.disabled = false;
                showSuccess('Sistem durumu yenilendi - Tüm sistemler normal çalışıyor');
            }, 2000);
        }

        // Global functions
        window.changeMachine = changeMachine;
        window.refreshMachines = refreshMachines;
        window.refreshSystemStatus = refreshSystemStatus;
        window.checkTokenStatus = checkTokenStatus;
        window.refreshToken = refreshToken;
    </script>
}

