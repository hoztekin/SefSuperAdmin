                        </div>

                        <!-- Machine Selection Cards -->
                        <div id="machineSelectionCards" class="row g-3" style="display: none;">
                            <!-- Dynamic content will be loaded here -->
                        </div>

                        <!-- Error State -->
                        <div id="machineErrorState" class="alert alert-danger" style="display: none;" role="alert">
                            <i class="bx bx-error-circle"></i>
                            <span id="machineErrorMessage">Makineler yüklenemedi.</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="d-flex justify-content-between w-100">
                    <div class="text-muted">
                        <small><i class="bx bx-info-circle"></i> API adresi otomatik olarak ayarlanacaktır</small>
                    </div>
                    <button type="button" class="btn btn-secondary" onclick="refreshMachines()">
                        <i class="bx bx-refresh"></i> Yenile
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        let selectedMachineId = null;
        let isSelecting = false; // Çoklu seçimi engelle

        // Sayfa yüklendiğinde modal'ı kontrol et
        $(document).ready(function() {
            checkSelectedMachine();
        });

        function checkSelectedMachine() {

            $.get('@Url.Action("GetSelectedMachine", "Home")')
                .done(function(response) {

                    if (response.success && response.data) {
                        showSelectedMachineInfo(response.data);
                    } else {
                        $('#machineSelectionModal').modal('show');
                        loadMachines();
                    }
                })
                .fail(function(xhr, status, error) {
                    $('#machineSelectionModal').modal('show');
                    loadMachines();
                });
        }

        function loadMachines() {
            showLoadingState();

            $.get('@Url.Action("GetMachines", "Home")')
                .done(function(response) {

                    if (response.success && response.data && response.data.length > 0) {
                        displayMachines(response.data);
                    } else {
                        showErrorState(response.message || 'Hiç makine bulunamadı');
                    }
                })
                .fail(function(xhr, status, error) {
                    let errorMessage = 'Sunucu hatası oluştu';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMessage = xhr.responseJSON.message;
                    } else if (xhr.responseText) {
                        errorMessage = 'HTTP ' + xhr.status + ': ' + xhr.statusText;
                    }
                    showErrorState(errorMessage);
                });
        }

        function displayMachines(machines) {
            const container = $('#machineSelectionCards');
            container.empty();

            machines.forEach(machine => {
                const cardHtml = `
                    <div class="col-md-6 col-lg-4">
                        <div class="card machine-card h-100 position-relative" onclick="selectMachine('${machine.id}', this)">
                            <div class="machine-status"></div>
                            <div class="card-body text-center">
                                <div class="machine-icon mx-auto">
                                    <i class="bx bx-server"></i>
                                </div>
                                <h6 class="card-title mb-2">${machine.branchName}</h6>
                                <p class="card-text">
                                    <small class="text-muted">Branch ID: ${machine.branchId}</small><br>
                                    <small class="text-muted">Code: ${machine.code}</small>
                                </p>
                                <div class="api-address mt-2">
                                    ${machine.apiAddress}
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                container.append(cardHtml);
            });

            hideLoadingState();
            showMachineCards();
        }

        function selectMachine(machineId, cardElement) {
            if (isSelecting) {
                return;
            }

            if (selectedMachineId === machineId) {
                return;
            }

            isSelecting = true;

            // Tüm kartlardan seçim durumunu kaldır
            $('.machine-card').removeClass('selecting');

            // Seçilen kartı işaretle
            $(cardElement).addClass('selecting');
            selectedMachineId = machineId;

            // Loading durumu göster
            $(cardElement).find('.machine-icon i').removeClass('bx-server').addClass('bx-loader-alt bx-spin');

            const requestData = { machineId: machineId };

            $.ajax({
                url: '@Url.Action("SelectMachine", "Home")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(requestData),
                success: function(response) {
                    isSelecting = false;

                    if (response.success) {
                        // Başarılı, modal'ı kapat
                        Swal.fire({
                            title: 'Başarılı!',
                            text: response.message,
                            icon: 'success',
                            timer: 2000,
                            showConfirmButton: false
                        }).then(() => {
                            $('#machineSelectionModal').modal('hide');
                            showSelectedMachineInfo(response.machine);
                        });
                    } else {
                        // Hata durumu
                        Swal.fire({
                            title: 'Hata!',
                            text: response.message,
                            icon: 'error'
                        });

                        resetCardSelection(cardElement);
                    }
                },
                error: function(xhr, status, error) {
                    isSelecting = false;

                    let errorMessage = 'Beklenmeyen bir hata oluştu';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMessage = xhr.responseJSON.message;
                    }

                    Swal.fire({
                        title: 'Hata!',
                        text: errorMessage,
                        icon: 'error'
                    });

                    resetCardSelection(cardElement);
                }
            });
        }

        function resetCardSelection(cardElement) {
            $(cardElement).removeClass('selecting');
            $(cardElement).find('.machine-icon i').removeClass('bx-loader-alt bx-spin').addClass('bx-server');
            selectedMachineId = null;
        }

        // Diğer fonksiyonlar aynı kalacak...
        function refreshMachines() {
            selectedMachineId = null;
            loadMachines();
        }

        function showLoadingState() {
            $('#machineLoadingState').show();
            $('#machineSelectionCards').hide();
            $('#machineErrorState').hide();
        }

        function hideLoadingState() {
            $('#machineLoadingState').hide();
        }

        function showMachineCards() {
            $('#machineSelectionCards').show();
            $('#machineErrorState').hide();
        }

        function showErrorState(message) {
            $('#machineErrorMessage').text(message);
            $('#machineErrorState').show();
            $('#machineLoadingState').hide();
            $('#machineSelectionCards').hide();
        }

        function showSelectedMachineInfo(machine) {
            const machineInfo = `
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="bx bx-server"></i>
                    <strong>Seçili Makine:</strong> ${machine.branchName}
                    <small class="ms-2 text-muted">(${machine.apiAddress})</small>
                    <button type="button" class="btn btn-sm btn-outline-info ms-2" onclick="changeMachine()">
                        Değiştir
                    </button>
                </div>
            `;

            if ($('#selectedMachineInfo').length === 0) {
                $('.page-header').after('<div id="selectedMachineInfo">' + machineInfo + '</div>');
            } else {
                $('#selectedMachineInfo').html(machineInfo);
            }
        }

        function changeMachine() {
            selectedMachineId = null;
            $('#machineSelectionModal').modal('show');
            loadMachines();
        }
    </script>

    <script>
        function refreshSystemStatus() {
            const button = event.target;
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="bx bx-loader-alt bx-spin"></i> Yenileniyor...';
            button.disabled = true;

            setTimeout(function() {
                button.innerHTML = originalText;
